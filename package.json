{
  "name": "car-report-generator",
  "version": "1.0.0",
  "description": "Генератор отчётов об автомобилях из китайских источников",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:web": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "pack:win": "npm run build && electron-builder --win --dir",
    "dist:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.carreport.generator",
    "productName": "Генератор Отчётов Авто",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "ru"
      ],
      "language": "1049"
    },
    "portable": {
      "artifactName": "CarReportGenerator-Portable.exe"
    }
  },
  "dependencies": {
    "openai": "^4.67.0"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "vite": "^5.4.21",
    "wait-on": "^8.0.0"
  }
}
